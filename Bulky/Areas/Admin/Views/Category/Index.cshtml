@{
}
@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
   <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Edit</th>
   </tr>
  
       @foreach (var item in Model.OrderBy(u=>u.DisplayOrder))
       {
            <tr>
        
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                    </a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                </div>
            </td>
            </tr>
       }
</table>
</div>