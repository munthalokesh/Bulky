@{
}
@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Title</td>
                <td>@item.ISBN</td>
                <td>@item.ListPrice</td>
                <td>@item.Author</td>
                <td> </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Product" asp-route-id="@item.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>