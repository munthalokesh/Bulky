@{
}
@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row ">
            <div class="border p-4 mt-2 shadow">

                @*    <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-0" ></label>
                    <input asp-for="Title" class="form-control" disabled />
                    
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-0"></label>
                    <textarea asp-for="Description" class="form-control" disabled></textarea>
                    
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ISBN" class="p-0"></label>
                    <input asp-for="ISBN" class="form-control" disabled />
                    
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="ListPrice" class="p-0"></label>
                    <input asp-for="ListPrice" class="form-control" disabled />
                   
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Author" class="p-0"></label>
                    <input asp-for="Author" class="form-control" disabled />
                   
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price" class="p-0"></label>
                    <input asp-for="Price" class="form-control" disabled />
                  
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price50" class="p-0"></label>
                    <input asp-for="Price50" class="form-control" disabled />
                    
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price100" class="p-0"></label>
                    <input asp-for="Price100" class="form-control" disabled />
                    
                </div>
                <div class="row">
                    <div class="col-md-3 col-5">
                        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
                    </div>
                    <div class="col-md-3 col-5">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-danger">Back to List</a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}