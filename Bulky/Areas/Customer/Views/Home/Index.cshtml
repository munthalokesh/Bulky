@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2 pb-3">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImgUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-uppercase text-center mb-1">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-uppercase text-center">As low as: <span>@product.Price100.ToString("c")</span></p>
                        </div>
                        <div>
                            <a  asp-route-ProductId="@product.Id" asp-action="Details" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>

        </div>
    }
</div>
